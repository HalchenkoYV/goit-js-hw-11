 {{#each this}}
    <div class="photo-card">
            <a class="link" href="{{largeImageURL}}">
                <img src="{{webformatURL}}" alt="{{tags}}" loading="lazy"  class="images">
            </a>
            
            <div class="card-info">
                <p class="info-item">
                     <b>Likes: {{likes}}</b>
                 </p>
                <p class="info-item">
                     <b>Views: {{views}}</b>
                 </p>
                <p class="info-item">
                    <b>Comments: {{comments}}</b>
                </p>
                <p class="info-item">
                    <b>Downloads: {{downloads}}</b>
                </p>
            </div>
        </div>
    </div>
{{/each}}